<% if @user.errors.any? %>
	<div id="error_explanation">
		<h2>Informe corretamente os dados solicitados</h2>
		<ul>
			<% @user.errors.full_messages.each do |msg| %> 
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for @user do |f| %>
	<p>
		<%= f.label :nome %> <br/>
		<%= f.text_field :nome %>
	</p>
	<p>
		<%= f.label :email %> <br/>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :senha %> <br/>
		<%= f.password_field :senha %>
	</p>
	<p>
		<%= f.label :senha_confirmation %> <br/>
		<%= f.password_field :senha_confirmation %>
	</p>
	<p>
		<%= f.submit %>
	</p>

<% end%>